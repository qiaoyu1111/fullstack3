<div class="row">
  <div class="col-md-6">
    <% if @course.image.present? %>
      <%= image_tag(@course.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @course.title %> </h2>
    <div style="height:100px;">
      <p>
        <%= @course.description %>
      </p>
    </div>
    <div class="pull-right">
      <%= link_to("加入购物车?", "#", :class => "btn btn-danger btn-lg") %>
    </div>
  </div>
</div>

<table class="table">
  <thead>
   <tr>
      <th>文章内容</th>
      <th>发表者</th>
      <th>发表时间</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>
        <td><%= post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
