<div class="col-md-12">
  <div class="post">
    <%= link_to("Edit", edit_admin_course_path(@course), class: "btn btn-primary pull-right")%>
    <%= link_to("Write a Post", new_admin_course_post_path(@course), class: "btn btn-default pull-right")%>
  </div>

  <br><br>

  <h2><%= @course.title %></h2>
  <p><%= @course.description %></p>

  <br><br><hr><br><br>

  <table class="table">
    <thead>
     <tr>
        <th>#</th>
        <th>文章标题</th>
        <th>文章内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= post.id %>
          </td>
          <td><%= post.name %></td>
          <td><%= link_to(post.content, post_path(@post)) %></td>
          <td><%= post.user.email %></td>
          <td><%= post.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
