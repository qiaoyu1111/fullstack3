<h2> Edit course </h2>

<%= simple_form_for [:admin, @course] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <% if @course.image.present? %>
    <span>目前商品图</span> <br>
    <%= image_tag(@course.image.thumb.url) %>
  <% end %>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <%= f.input :is_hidden %>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
