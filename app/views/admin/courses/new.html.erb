<h2> New course </h2>

<%= simple_form_for [:admin, @course] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <%= f.input :is_hidden %>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
